<Window x:Class="CronNotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CronNotify"
        mc:Ignorable="d"
        Title="定时提醒" Height="450" Width="800" StateChanged="Window_StateChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="info" TextWrapping="Wrap" Grid.Column="1" Margin="0,20,0,0"/>
        <Button x:Name="start" Content="开始" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="280" Click="start_Click" Grid.Row="1"/>
        <TextBlock x:Name="timeblock" TextWrapping="Wrap" Grid.Column="1" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.463,-1.306" Grid.Column="1"><Run Language="zh-cn" Text="日志"/></TextBlock>
        <TabControl>
            <TabItem Header="计划任务列表">
                <TextBox x:Name="ct" TextWrapping="Wrap"/>
            </TabItem>
            <TabItem Header="当前任务列表">
                <ListView x:Name="ct2" ItemsSource="{Binding}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Time">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <!-- StringFormat 格式化日期 -->
                                        <TextBlock Text="{Binding time, StringFormat='yyyy-MM-dd HH:mm:ss'}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Second" DisplayMemberBinding="{Binding beforeSecond}" />
                            <GridViewColumn Header="Content" DisplayMemberBinding="{Binding text}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
